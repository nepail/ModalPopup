@model ModalPopup.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="addEmployee">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addEmployeeLabel">確定要刪除嗎?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-boy">
                <form action="/Employees/Delete">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id"/>
                        <label asp-for="Id">@Model.Id</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">@Model.Name</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">@Model.Email</label>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Delete</button>
            </div>
        </div>
    </div>
</div>
